{% extends 'layouts/main.twig' %}

{% block content %}
    {%  set buttons = [
      {'envy': 'ambiance', 'style': 'info', 'text': "Jeu d'ambiance"},
      {'envy': 'apero', 'style': 'success', 'text': "Sur la table d'apéro"},
      {'envy': 'coop', 'style': 'inverse', 'text': "Jeu coopératif"},
      {'envy': 'lulu', 'style': 'primary', 'text': "Jouer avec Lulu"},
      {'envy': 'deux', 'style': 'warning', 'text': "Bon à 2 joueurs"},
      {'envy': 'complexe', 'style': 'danger', 'text': "Jeu complexe"},
      {'envy': 'default', 'style': 'default', 'text': 'Peu importe'},
    ] %}

<div class="container">
  {% for button in buttons %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p>
        <a href="/wizard/step/4/type/{{ type }}/duration/{{ duration }}/envy/{{ button.envy }}" class="btn btn-large btn-full btn-{{ button.style }}">{{ button.text }}</a>
      </p>
    </div>
  </div>
  {%  endfor %}
</div>
{% endblock %}